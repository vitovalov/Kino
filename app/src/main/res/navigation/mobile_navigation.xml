    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.vitovalov.kino.ui.showlist_screen.ShowListFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_show_list" />

    <fragment
        android:id="@+id/navigation_more"
        android:name="com.vitovalov.kino.ui.more_screen.MoreFragment"
        android:label="@string/more"
        tools:layout="@layout/fragment_more" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.vitovalov.kino.ui.settings_screen.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
